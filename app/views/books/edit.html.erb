<%= form_with model:@book, local:true do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <div class="error-field">
      <label>Title</label>
      <%= f.text_field :title %>
    </div>
    <div class="error-field">
      <label>Body</label>
      <%= f.text_area :body %>
    </div>
    <div class="field">
      <%= f.submit 'Create Book' %>
    </div>
  <% else %>
    <div class="field">
      <label>Title</label>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <label>Body</label>
      <%= f.text_area :body %>
    </div>
    <div class="field">
      <%= f.submit 'Update Book' %>
    </div>
  <% end %>  
<% end %>

